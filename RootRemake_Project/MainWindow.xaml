<Window x:Class="RootRemake_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RootRemake_Project"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Text="Select Your Character" FontSize="24" FontWeight="Bold" HorizontalAlignment="Left" Margin="290,45,0,339" Width="257"/>

        <StackPanel Orientation="Horizontal" Margin="0, 100,0,0">
            <Button Tag="Marquis" Click="CharacterSelected" Height="100" Width="91">
                <Image Source="Assets/Marquis/Icon.png" Width="100" Height="100"/>
            </Button>
            <Button Tag="Eyrie" Click="CharacterSelected" Height="295" Width="69">
                <Image Source="Assets/Eyrie/Icon.png" Width="100" Height="100"/>
            </Button>
            <Button Tag="Vagabond" Click="CharacterSelected" Height="292" Width="67">
                <Image Source="Assets/Vagabond/Icon.png" Width="100" Height="100"/>
            </Button>
            <Button Tag="Woodland" Click="CharacterSelected" Height="294" Width="69">
                <Image Source="Assets/Woodland/Icon.png" Width="100" Height="100"/>
            </Button>
            <Button Tag="Vagabond" Click="CharacterSelected" Height="292" Width="69">
                <Image Source="Assets/Vagabond/Icon.png" Width="100" Height="100"/>
            </Button>
        </StackPanel>

        <Button Content="Start Game" Click="StartGame_Click" Width="150" Height="50" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,30"/>
    </Grid>


</Window>
