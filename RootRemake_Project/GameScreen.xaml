<Window x:Class="RootRemake_Project.GameScreen"
        
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RootRemake_Project"
        mc:Ignorable="d"
        Title="GameScreen" Height="838" Width="1070" ResizeMode="NoResize" Closed="Window_Closed">

    <Grid Margin="0,0,0,-6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="869"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <DockPanel x:Name="dockPanelMap" Height="797" Width="884" Grid.Column="0" >
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_Options">
                    <MenuItem Header="_Debug"/>
                </MenuItem>
            </Menu>
            
            <Image x:Name="imgMap" Source="Assets/rootmap.jpg"  DockPanel.Dock="Left" Height="797" Width="884" MouseDown="imgMap_MouseDown" MouseMove="imgMap_MouseMove" />
        </DockPanel>
    </Grid>
</Window>
