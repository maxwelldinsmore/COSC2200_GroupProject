<Window x:Class="RootRemake_Project.GameScreen"  
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RootRemake_Project"
        mc:Ignorable="d"
        Title="GameScreen" 
        Height="800" Width="1100" ResizeMode="NoResize" Closed="Window_Closed">

    <Grid Margin="0,0,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="860"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="21"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Menu DockPanel.Dock="Top" Grid.Row="0" Grid.Column="1" Margin="0,0,0,0">
            <MenuItem Header="_Options">
                <MenuItem Header="_Debug"/>
            </MenuItem>
        </Menu>
        
        <Image x:Name="imgMap" Source="Assets/rootmap.jpg" 
            MouseDown="imgMap_MouseDown" MouseMove="imgMap_MouseMove"
            Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Margin="-7,0,7,0" 
            Height="777" 
        />
        <Grid Background="PaleGoldenrod" Grid.Column="1" Grid.Row="1">
            
        </Grid>
    </Grid>
</Window>
