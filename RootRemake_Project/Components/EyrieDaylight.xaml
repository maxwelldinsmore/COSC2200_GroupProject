<UserControl x:Class="RootRemake_Project.Components.EyrieDaylight"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RootRemake_Project.Components"
             mc:Ignorable="d" 
             FontFamily="{StaticResource Luminari}"
             Height="451" Width="253">
    <Grid x:Name="mainGrid">
        <Label Content="Fulfill your Decree" ToolTip="Complete your decree based on card suits with Birds/Blues being wildcards." FontSize="25" HorizontalAlignment="Left" Margin="17,10,0,0" VerticalAlignment="Top"/>
        <!-- Recruit Section-->
        <Label x:Name="recruitLbl" ToolTip="Recruit in a matching clearing" FontSize="20" Content="Recruit" HorizontalAlignment="Left" Margin="17,74,0,0" VerticalAlignment="Top"/>
        <Grid x:Name="recruitGrid" Margin="17,105,56,308"/>
        <!-- Move Section-->
        <Label x:Name="moveLbl" ToolTip="Move from a matching clearing" FontSize="20" Content="Move" HorizontalAlignment="Left" Margin="17,148,0,0" VerticalAlignment="Top"/>
        <Grid x:Name="moveGrid" Margin="17,174,55,239" />

        <!-- Attack Section-->
        <Label x:Name="attackLbl" FontSize="20" Content="Attack" HorizontalAlignment="Left" Margin="17,217,0,0" VerticalAlignment="Top"/>
        <Grid x:Name="attackGrid" Margin="17,245,56,168" />
        <!-- Build Section-->
        <Label x:Name="buildLbl"  FontSize="20"  Content="Build" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="17,288,0,0" />
        <Grid x:Name="buildGrid" Margin="17,315,56,98" />

    </Grid>
</UserControl>
