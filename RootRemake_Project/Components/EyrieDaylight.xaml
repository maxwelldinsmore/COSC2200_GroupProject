<UserControl x:Class="RootRemake_Project.Components.EyrieDaylight"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RootRemake_Project.Components"
             mc:Ignorable="d" 
             FontFamily="{StaticResource Luminari}"
             Height="451" Width="253">
    <Grid>
        <Label Content="Fulfill your Decree" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <!-- Recruit Section-->
        <Label x:Name="recruitLbl" Content="Recruit" HorizontalAlignment="Left" Margin="10,74,0,0" VerticalAlignment="Top"/>
        <Grid x:Name="recruitGrid" Margin="18,100,55,313"/>
        <!-- Move Section-->
        <Label x:Name="moveLbl" Content="Move" HorizontalAlignment="Left" Margin="15,143,0,0" VerticalAlignment="Top"/>
        <Grid x:Name="moveGrid" Margin="18,157,55,256"/>

        <!-- Attack Section-->
        <Label x:Name="attackLbl" Content="Attack" HorizontalAlignment="Left" Margin="18,195,0,0" VerticalAlignment="Top"/>
        <Grid x:Name="attackGrid" Margin="18,221,55,192"/>
        <!-- Build Section-->
        <Label x:Name="buildLbl"  Content="Build" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="18,258,0,0"/>
        <Grid x:Name="buildGrid" Margin="18,284,55,129"/>

    </Grid>
</UserControl>
