<UserControl x:Class="RootRemake_Project.Components.characterSelect"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RootRemake_Project.Components"
             mc:Ignorable="d" Height="270" Width="460"
             FontFamily="{StaticResource Luminari}">
    <Border BorderBrush="Black" BorderThickness="2">
        <Grid Background="Beige" x:Name="charGrid">
            <TextBox x:Name="charText" HorizontalAlignment="Left" Height="22" Margin="128,78,0,0" TextWrapping="Wrap"
                 VerticalAlignment="Top" Width="196"  
                ToolTip = "Enter player name"/>


            <Label Content="Player Name:" HorizontalAlignment="Left" Margin="18,74,0,0"
                VerticalAlignment="Top" Width="88"/>
            <Label Content="Select Character:" HorizontalAlignment="Left" Margin="12,117,0,0"
        VerticalAlignment="Top" Width="100"/>
            <Button x:Name="marquisBtn" HorizontalAlignment="Left" Height="61" Margin="131,133,0,0"
         VerticalAlignment="Top" Width="61" Tag="Marquis" Click="CharacterSelected" 
                 ToolTip = "Select The Marquis Class">
                <Image Height="58" Width="58" Source="pack://application:,,,/Assets/Marquis/Icon.png"/>
            </Button>
            <Button x:Name="eyrieBtn" HorizontalAlignment="Left" Height="61"
         Margin="197,133,0,0" VerticalAlignment="Top" Width="61" Tag="Eyrie" Click="CharacterSelected"
                 ToolTip = "Select the Eyrie Class">
                <Image Height="56" Width="56" Source="/Assets/Eyrie/Icon.png"/>
            </Button>
            <Button x:Name="woodlandBtn" HorizontalAlignment="Left" Height="61"
         Margin="263,133,0,0" VerticalAlignment="Top" Width="61" Tag="Woodland" Click="CharacterSelected"
                 ToolTip = "Select Woodland">
                <Image Height="57" Width="57" Source="/Assets/Woodland/Icon.png"/>
            </Button>
            <Button x:Name="vagabondBtn" HorizontalAlignment="Left" Height="61"
         Margin="329,134,0,0" VerticalAlignment="Top" Width="61" Tag="VagabondGray" Click="CharacterSelected"
                 ToolTip = "Select The Gray Vagabond Class">
                <Image Height="57" Width="57" Source="/Assets/Vagabond/Icon.png"/>
            </Button>
            
        </Grid>
    </Border>
</UserControl>
