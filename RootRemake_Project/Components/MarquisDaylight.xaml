<UserControl x:Class="RootRemake_Project.Components.MarquisDaylight"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RootRemake_Project.Components"
             mc:Ignorable="d" 
             FontFamily="{StaticResource Luminari}"
             Height="451" Width="253">
    <Grid >
        <Label x:Name="actionsRemainingLabel" Content="Actions Remaining: X" Margin="10,3,42,411" FontSize="18" RenderTransformOrigin="0.491,0.978"/>
        <Label x:Name="woodCountLabel" Content="Available Wood: X" Margin="10,40,73,374" FontSize="18" RenderTransformOrigin="0.491,0.978"/>
        <Button x:Name="attackBtn" Content="Attack" HorizontalAlignment="Left" Margin="10,0,0,311" VerticalAlignment="Bottom" Height="68" Width="101" Click="attackBtn_Click"/>
        <Button x:Name="recruitBtn" Content="Recruit" HorizontalAlignment="Left" Margin="10,145,0,0" VerticalAlignment="Top" Height="79" Width="101" Click="recruitBtn_Click"/>
        <Button x:Name="marchBtn" Content="Move" HorizontalAlignment="Left" Margin="126,68,0,0" VerticalAlignment="Top" Height="68" Width="100" Click="marchBtn_Click"/>
        <Button x:Name="buildRecruiterBtn" Content="Recruiter" HorizontalAlignment="Left" Margin="10,271,0,0" VerticalAlignment="Top" Height="52" Width="83"/>
        <Label Content="Build" HorizontalAlignment="Left" Margin="12,240,0,0" VerticalAlignment="Top" Width="48"/>
        <Button x:Name="buildWorkshopBtn" Content="Workshop" HorizontalAlignment="Left" Margin="12,346,0,0" VerticalAlignment="Top" Height="52" Width="83"/>
        <Button x:Name="buildSawmillBtn" Content="Sawmill" HorizontalAlignment="Left" Margin="128,346,0,0" VerticalAlignment="Top" Height="52" Width="83"/>
        <Button x:Name="overworkBtn" Content="Overwork" HorizontalAlignment="Left" Margin="126,271,0,0" VerticalAlignment="Top" Height="52" Width="85" RenderTransformOrigin="0.526,0.807"/>
        <Button x:Name="gainActionBtn" Content="Gain Action" HorizontalAlignment="Left" Margin="126,145,0,0" VerticalAlignment="Top" Height="79" Width="100" Click="gainActionBtn_Click" />

    </Grid>
</UserControl>
