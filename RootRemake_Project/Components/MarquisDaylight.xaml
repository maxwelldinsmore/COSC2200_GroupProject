<UserControl x:Class="RootRemake_Project.Components.MarquisDaylight"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RootRemake_Project.Components"
             mc:Ignorable="d" 
             FontFamily="{StaticResource Luminari}"
             Height="451" Width="253">
    <Grid >
        <Label x:Name="actionsRemainingLabel" Content="Actions Remaining: X" Margin="10,27,42,387" FontSize="18" RenderTransformOrigin="0.491,0.978"/>
        <Label x:Name="woodCountLabel" Content="Available Wood: X" Margin="12,257,71,157" FontSize="18" RenderTransformOrigin="0.491,0.978" />
        <Button x:Name="attackBtn" Content="Attack" HorizontalAlignment="Left" Margin="12,0,0,311" VerticalAlignment="Bottom" Height="58" Width="99" Click="attackBtn_Click"
                ToolTip = "Attack Action" Background="#FFC4673C" FontSize="12" BorderBrush="#FF4A413C" Foreground="#FF29251E" TextBlock.FontFamily="{StaticResource Luminari}"/>
        <Button x:Name="recruitBtn" Content="Recruit" HorizontalAlignment="Left" Margin="12,145,0,0" VerticalAlignment="Top" Height="60" Width="98" Click="recruitBtn_Click"
                ToolTip = "Recruit Troopers" Background="#FFC4673C" FontSize="12" BorderBrush="#FF4A413C" Foreground="#FF29251E" TextBlock.FontFamily="{StaticResource Luminari}"/>
        <Button x:Name="marchBtn" Content="Move" HorizontalAlignment="Left" Margin="128,82,0,0" VerticalAlignment="Top" Height="58" Width="98" Click="marchBtn_Click" 
                ToolTip = "Move to an different clearing" Background="#FFC4673C" FontSize="12" BorderBrush="#FF4A413C" Foreground="#FF29251E" TextBlock.FontFamily="{StaticResource Luminari}"/>
        <Button x:Name="buildRecruiterBtn" Content="Recruiter" HorizontalAlignment="Left" Margin="12,312,0,0" VerticalAlignment="Top" Height="53" Width="78" Click="buildRecruiterBtn_Click"
                ToolTip = "Build to an location" Background="#FFC4673C" FontSize="10" BorderBrush="#FF4A413C" Foreground="#FF29251E" TextBlock.FontFamily="{StaticResource Luminari}"/>
        <Label Content="Build" HorizontalAlignment="Left" Margin="12,226,0,0" VerticalAlignment="Top" Width="48"  />
        <Button x:Name="buildWorkshopBtn" Content="Workshop" HorizontalAlignment="Left" Margin="11,376,0,0" VerticalAlignment="Top" Height="53" Width="78" Click="buildWorkShopBtn_Click"
                ToolTip = "Build an workshop" Background="#FFC4673C" FontSize="10" BorderBrush="#FF4A413C" Foreground="#FF29251E" TextBlock.FontFamily="{StaticResource Luminari}"/>
        <Button x:Name="buildSawmillBtn" Content="Sawmill" HorizontalAlignment="Left" Margin="124,312,0,0" VerticalAlignment="Top" Height="53" Width="80" Click="buildSawmillBtn_Click"
                ToolTip = "Build an sawmill" Background="#FFC4673C" FontSize="11" BorderBrush="#FF4A413C" Foreground="#FF29251E" TextBlock.FontFamily="{StaticResource Luminari}"/>
        <Button x:Name="overworkBtn" Content="Overwork" HorizontalAlignment="Left" Margin="128,145,0,0" VerticalAlignment="Top" Height="60" Width="98" Click="overworkBtn_Click"
                ToolTip = "Gain one more wood" Background="#FFC4673C" FontSize="11" BorderBrush="#FF4A413C" Foreground="#FF29251E" TextBlock.FontFamily="{StaticResource Luminari}"/>
        <Button x:Name="gainActionBtn" Content="Gain Action" HorizontalAlignment="Left" Margin="128,209,0,0" VerticalAlignment="Top" Height="26" Width="98" Click="gainActionBtn_Click" 
                ToolTip = "use wild card for one more action" Background="#FFC4673C" FontSize="10" BorderBrush="#FF4A413C" Foreground="#FF29251E" TextBlock.FontFamily="{StaticResource Luminari}"/>
        <Label x:Name="recruitWoodLbl" Content="0" HorizontalAlignment="Left" Margin="90,321,0,0" VerticalAlignment="Top" Width="29" FontSize="16" Height="31"/>
        <Label x:Name="workshopWoodLbl" Content="0" HorizontalAlignment="Left" Margin="90,385,0,0" VerticalAlignment="Top" Width="29" FontSize="16" Height="31"/>
        <Label x:Name="sawmillWoodLbl" Content="0" HorizontalAlignment="Left" Margin="207,321,0,0" VerticalAlignment="Top" Width="29" FontSize="16" Height="31"/>

    </Grid>
</UserControl>
