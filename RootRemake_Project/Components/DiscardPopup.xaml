<UserControl x:Class="RootRemake_Project.Components.DiscardPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="400" Height="Auto"
             Background="Transparent"
             Visibility="Visible">
    <Border Background="#AA000000">
        <Border Background="#FF2D2D30" CornerRadius="10" Padding="20" Width="380">
            <StackPanel>
                <!-- Dynamic Header -->
                <TextBlock x:Name="HeaderText" FontSize="18" FontWeight="Bold" 
                          Foreground="White" TextWrapping="Wrap" Margin="0,0,0,10"/>

                <!-- Card Display (Visible only during card selection) -->
                <Border x:Name="CardDisplayBorder" BorderBrush="#FF575757" 
                        BorderThickness="1" CornerRadius="5" Padding="10" 
                        Margin="0,0,0,15" Visibility="Collapsed">
                    <StackPanel>
                        <Image x:Name="CardImage" Width="120" Height="180" 
                              Stretch="Uniform" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="CardInfoText" Foreground="LightGray" 
                                  Margin="0,10,0,0" TextAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Action Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="ActionButton1" Content="Confirm" Width="100" 
                            Margin="0,0,10,0" Click="ActionButton_Click" Visibility="Collapsed"/>
                    <Button x:Name="ActionButton2" Content="Cancel" Width="100"
                            Click="ActionButton_Click" Visibility="Collapsed"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Border>
</UserControl>