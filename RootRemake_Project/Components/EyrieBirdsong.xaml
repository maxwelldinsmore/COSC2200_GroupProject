<UserControl x:Class="RootRemake_Project.Components.EyrieBirdsong"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RootRemake_Project.Components"
             mc:Ignorable="d" 
             FontFamily="{StaticResource Luminari}"
             Height="451" Width="253"
             FontSize="24">
    <Grid>
        <TextBlock Text="Add to Decree Up to 2 times (using a wildcard only once)" TextWrapping="Wrap"/>





        <!-- Recruit Section-->
        <Button x:Name="recruitBtn" Margin="10,130,145,290" Content="Recruit" FontFamily="{StaticResource Luminari}" Click="recruitBtn_Click"/>
        <Grid x:Name="recruitGrid" Margin="10,161,63,252">
        </Grid>
        <!-- Move Section-->
        <Button x:Name="moveBtn"  Margin="10,199,146,221"  Content="Move" FontFamily="{StaticResource Luminari}" Click="moveBtn_Click"/>
        <Grid x:Name="moveGrid" Margin="10,230,62,183" />

        <!-- Attack Section-->
        <Button x:Name="attackBtn" Margin="10,268,146,152" Content="Attack" FontFamily="{StaticResource Luminari}" Click="attackBtn_Click"/>
        <Grid x:Name="attackGrid" Margin="10,301,63,112" />
        <!-- Build Section-->
        <Button x:Name="buildBtn" Margin="10,339,145,81" Content="Build" FontFamily="{StaticResource Luminari}" Click="buildBtn_Click"/>
        <Grid x:Name="buildGrid" Margin="10,381,63,32" />
    </Grid>
</UserControl>
